<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_title_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zip"
        android:textSize="30sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/txt_detail_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sau khi bạn zip tệp zip sẽ hiển thị ở theo đường dẫn \n Download/MyImageZips/"
        android:gravity="center"
        android:textSize="13sp">
    </TextView>
    <EditText
        android:id="@+id/edt_name_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:hint="Nhập tên file zip"
        >
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_ok_zip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"/>
        <Button
            android:id="@+id/btn_cancel_zip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"/>
    </LinearLayout>
</LinearLayout>