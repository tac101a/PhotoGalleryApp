<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_1"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/main_favorite_layout"
    tools:context=".TrashCanLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btn_choose_in_favorite"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@color/blue_press"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:textSize="8dp"
            android:text="Choose"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_favorite_recently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_choose_in_favorite"
            android:layout_alignParentLeft="true"
            android:text="Favorite Recently"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grid_view_favorite"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"

            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3" />

        <TextView
            android:id="@+id/txt_display_total_picture_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Total :94"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/last_linear_in_favorite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_no_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Favorite"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_share_in_favorite_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>