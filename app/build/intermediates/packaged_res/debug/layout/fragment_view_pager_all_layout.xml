<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:context=".ViewPagerAllLayoutFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_in_all_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
    </androidx.viewpager2.widget.ViewPager2>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/top"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_animate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:text="Picture 1"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:visibility="invisible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/top"
        android:background="@color/teal_700"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_back"
            android:gravity="center"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:id="@+id/edt_time_capture"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="Thá»© Hai \n 16:11"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/teal_700"
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/txt_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_share_in_all_layout"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/txt_favorite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_favorite_in_alllayout"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/txt_information"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_information_in_alllayout"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/txt_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_edit_in_alllayout"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/txt_delete_into_trashcan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_delete_in_alllayout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>