<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center_vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_icon"
        android:id="@+id/search_button"
        android:backgroundTint="@android:color/transparent"
        app:borderWidth="0dp"
        android:tint="@color/dark_blue"
        />
    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btn_many"
        android:layout_centerVertical="true"
        android:text="Chọn"
        android:layout_marginRight="5dp"
        android:textColor="@color/textview_form"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="44dp"
        android:layout_toStartOf="@+id/tv_choose"
        android:layout_toEndOf="@+id/search_button"
        android:text="11/11/2023"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:shadowColor="@android:color/darker_gray"
        android:shadowRadius="1.5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:typeface="sans" />
    <Button
        android:id="@+id/btn_many"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/white"
        android:layout_marginTop="5dp"
        android:drawableTop="@drawable/more"
        android:gravity="center"
        android:background="@drawable/circle_background"
        android:paddingTop="10dp"
        />
</RelativeLayout>