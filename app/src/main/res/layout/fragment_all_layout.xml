<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllLayout"
    android:background="@color/black_1">
    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/light_theme_background"
        app:layout_constraintTop_toTopOf="parent">
        <Spinner
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="15dp"/>
<!--        <GridView-->
<!--            android:gravity="center"-->
<!--            android:id="@+id/gridView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:numColumns="3"-->
<!--            android:horizontalSpacing="5dp"-->
<!--            android:verticalSpacing="5dp"/>-->
<!--        <include layout="@layout/view_heading"/>-->
        <TextView
            android:id="@+id/tv_bottom"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="so luong"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentBottom="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_image_in_all"
            android:layout_marginHorizontal="10dp"
            app:spanCount="3"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include layout="@layout/view_heading"/>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/add"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/add_camera"
        android:tooltipText="Camera"
        app:backgroundTint="?attr/colorOnPrimary"
        android:visibility="gone"
        android:focusable="true"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/btn_add"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_Url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/link"
        android:focusable="true"
        android:tint="@color/white"
        android:tooltipText="URL"
        android:visibility="gone"
        app:backgroundTint="?attr/colorOnPrimary"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/btn_add_Camera"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_Images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/add_image"
        android:focusable="true"
        android:tint="@color/white"
        android:visibility="gone"
        app:backgroundTint="?attr/colorOnPrimary"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/btn_add_Url"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>