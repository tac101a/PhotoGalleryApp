<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#8E8484"
    android:orientation="vertical"
    tools:context=".ViewPagerAllLayoutFragment">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/close_24"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/check_24"
            android:gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgview"
        android:layout_above="@+id/color"
        android:layout_width="match_parent"
        android:layout_below="@+id/linear_layout1"
        android:layout_height="match_parent">
    </ImageView>


    <HorizontalScrollView
        android:id="@+id/srcollview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="70dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/filter1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="3dp"/>

            <ImageView
                android:id="@+id/filter2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="3dp"/>
            <ImageView
            android:id="@+id/filter3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="3dp"/>
            <ImageView
                android:id="@+id/filter4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="3dp"/>
            <ImageView
                android:id="@+id/filter5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="3dp"/>
            <ImageView
                android:id="@+id/filter6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="3dp"/>
            <ImageView
                android:id="@+id/filter7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="3dp"/>
            <ImageView
                android:id="@+id/filter8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="3dp"/>
        </LinearLayout>
    </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/color"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="50dp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <SeekBar
                    android:id="@+id/seekBar_red"
                    android:layout_width="match_parent"
                    android:minHeight="15dp"
                    android:maxHeight="15dp"
                    android:layout_height="wrap_content"
                    android:progress="50"
                    android:progressTint="#FF0000"
                    />
                <SeekBar
                    android:id="@+id/seekBar_green"
                    android:layout_width="match_parent"
                    android:minHeight="15dp"
                    android:maxHeight="15dp"
                    android:layout_height="wrap_content"
                    android:progress="50"
                    android:progressTint="#00FF00"
                    />
                <SeekBar
                    android:id="@+id/seekBar_blue"
                    android:layout_width="match_parent"
                    android:minHeight="15dp"
                    android:maxHeight="15dp"
                    android:layout_height="wrap_content"
                    android:progress="50"
                    android:progressTint="#0000FF"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/ln1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/increase"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/add" />
                    <ImageView
                        android:id="@+id/decrease"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/remove"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/ln1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View

                        android:background="@color/blue"
                        android:id="@+id/view_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
