<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:context=".ViewPagerAllLayoutFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_in_all_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
    </androidx.viewpager2.widget.ViewPager2>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/top"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_animate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:text="Picture 1"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:visibility="invisible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/top"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_back"
            android:gravity="center"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:id="@+id/edt_time_capture"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Thá»© Hai \n 16:11"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:background="#000000"
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/view1"
            android:background="@color/blue"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/txt_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/icon_share_in_all_layout"
                android:scaleType="center"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/txt_favorite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/icon_favorite_in_alllayout"
                android:scaleType="center"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/txt_setWallpaper"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/set_background_icon"
                android:scaleType="center"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/txt_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/icon_edit_in_alllayout"
                android:scaleType="center"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/txt_delete_into_trashcan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/icon_delete_in_alllayout"
                android:textSize="18sp"
                android:textStyle="bold"
                android:scaleType="center"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/txt_convertText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/image_to_text"
                android:scaleType="center"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>